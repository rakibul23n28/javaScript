<%- include("./partials/header") -%>
<body>
    <%- include("./partials/navbar") -%>
    <div class="container mx-auto my-10">
        <div class="max-w-4xl mx-auto bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 p-6">
            <% if(blog.coverImageURL) { %>
                <img class="w-full h-64 object-cover rounded-t-lg" src="<%= blog.coverImageURL %>" alt="Cover Image" />
            <% } %>
            <div class="p-5">
                <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white mb-4"><%= blog.title %></h1>
                <p class="text-gray-700 dark:text-gray-300 mb-6"><%= blog.body %></p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Written by: <%= blog.createdBy.firstName %> <%= blog.createdBy.lastName %></p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Posted on: <%= blog.createdAt.toDateString() %></p>
            </div>
        </div>
    </div>
    <%- include("./partials/footer") -%>
</body>
</html>