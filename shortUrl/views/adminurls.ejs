<%- include("./partials/header", { title }) -%>
  <body>
    <!-- justify-between -->
    <%- include("./partials/navbar", { title }) -%>

    <h1 class="text-6xl text-center text-black mb-4">All Users Urls</h1>
    <hr class="border-t-2 border-black-[0.5] my-8 m-10">

      <div class="relative overflow-x-auto shadow-sm sm:rounded-lg mx-16 mb-16">
        <table class="w-full text-sm text-center rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                      Email
                    </th>
                    <th scope="col" class="px-6 py-3">
                      Short Id
                    </th>
                    <th scope="col" class="px-6 py-3">
                      Original Url
                    </th>
                    <th scope="col" class="px-6 py-3">
                      Total Visits
                    </th>
                    <th scope="col" class="px-6 py-3">
                      Delete
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url,index) => { %>
                 <tr>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <%= users.find(user => user._id.toString() === url.createdBy.toString()).email %>
                    </th>
                    <td class="px-6 py-4">
                      <a href="/url/<%= url.shortId %>" class="text-blue-500 hover:text-blue-800">
                        <%= url.shortId %>
                    </td>
                    <td class="px-6 py-4">
                        <%= url.redirectUrl %>
                    </td>
                    <td class="px-6 py-4">
                        <%= url.visitHistory.length %>
                    </td>
                    <td class="px-6 py-4">
                        <a href="/admin/url/delete/<%= url.shortId %>" class="text-red-500 hover:text-red-800">
                            <button onclick="return confirm('Are you want to delete?')" class=" text-red-500 hover:text-red-700 font-bold py-2 px-4 rounded">Delete</button>
                        </a>
                    </td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
      </div>

    </div>
    <%- include("./partials/footer") %>
    
  </body>
</html>
