<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <% if (locals.id) { %>
      
      <a href="/url/<%= locals.id %>"> <%= locals.id %></a>
    <% } %>
    <h1>URL Shortener</h1>
    <form action="/url" method="POST">
      <input type="text" name="url" />
      <button type="submit">Shorten</button>
      
    </form>
    <table>
      <thead>
        <tr>
          <th>S.No</th>
          <th>Short Id</th>
          <th>Original Url</th>
          <th>Total Visits</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url,index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectUrl %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
